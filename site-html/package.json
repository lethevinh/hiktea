{
  "name": "theme-html",
  "version": "1.1.0",
  "description": "html-buider,webpack",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server --inline --progress --port 8080 --config src/config/webpack.dev.js",
    "build": "webpack --inline --progress --config src/config/webpack.prod.js",
    "watch:build": "webpack-dev-server --config src/config/webpack.prod.js  --inline --progress --port 8080",
    "watch:dev": "webpack-dev-server --env.dev --config src/configs/webpack.dev.js --inline --progress --port 8080",
    "watch:theme": "webpack-dev-server  --config src/configs/webpack.theme.js --inline --progress --port 8080",
    "build:theme": "rimraf dist && webpack --config src/configs/webpack.theme.js --bail",
    "build:dev": "rimraf dist && webpack --env.dev --config src/configs/webpack.dev.js --bail",
    "build:product": "rimraf dist && webpack --env.prod --config src/configs/webpack.prod.js --bail",
    "serve": "lite-server -c=bs-config.json",
    "test": "karma start karma.webpack.conf.js",
    "pretest:once": "npm run build",
    "build:watch": "tsc -p src/ -w",
    "build:upgrade": "tsc",
    "serve:upgrade": "http-server",
    "build:aot": "ngc -p tsconfig-aot.json && rollup -c rollup-config.js",
    "serve:aot": "lite-server -c bs-config.aot.json",
    "build:babel": "babel src -d src --extensions \".es6\" --source-maps",
    "copy-dist-files": "node ./copy-dist-files.js",
    "i18n": "ng-xi18n",
    "lint": "tslint ./src/**/*.ts -t verbose"
  },
  "author": "vinhle",
  "license": "ISC",
  "devDependencies": {
    "@types/jquery": "^3.3.29",
    "@types/lodash": "^4.14.122",
    "@types/node": "^11.11.0",
    "clean-webpack-plugin": "^2.0.0",
    "copy-webpack-plugin": "^5.0.0",
    "css-loader": "^2.1.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^4.6.0",
    "lodash": "^4.17.11",
    "node-sass": "^4.11.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "pug": "^2.0.3",
    "pug-loader": "^2.4.0",
    "responsive-loader": "^1.2.0",
    "sass-loader": "^7.1.0",
    "scss-loader": "0.0.1",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.3.3",
    "typescript": "^3.3.3333",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-dev-middleware": "^3.6.1",
    "webpack-dev-server": "^3.2.1",
    "webpack-merge": "^4.2.1",
    "webpack-pwa-manifest": "^4.0.0",
    "write-file-webpack-plugin": "^4.5.0"
  },
  "dependencies": {
    "@types/bootstrap": "^4.1.2",
    "@types/googlemaps": "^3.30.13",
    "@types/grecaptcha": "^2.0.35",
    "@types/imagesloaded": "^4.1.1",
    "@types/slick-carousel": "^1.6.32",
    "aos": "^2.3.3",
    "bootstrap": "^4.1.3",
    "constellation": "^0.2.0",
    "countdown": "^2.6.0",
    "countup": "^1.8.2",
    "font-awesome": "^4.7.0",
    "granim": "^1.1.1",
    "imagesloaded": "^4.1.4",
    "jarallax": "^1.10.4",
    "jquery": "^3.3.1",
    "lity": "^2.3.1",
    "objectFitPolyfill": "^2.1.1",
    "perfect-scrollbar": "^1.4.0",
    "photoswipe": "^4.1.2",
    "popper.js": "^1.14.4",
    "shuffle": "^0.2.2",
    "shufflejs": "^5.2.0",
    "slick-carousel": "^1.8.1",
    "typed": "^0.3.3"
  }
}
