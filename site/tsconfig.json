{
    "compilerOptions":
    {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        // types option has been previously configured
        "types": [
            // add node as an option
            "node"
        ],
        // typeRoots option has been previously configured
        "typeRoots": [
            // add path to @types
            "node_modules/@types"
        ]
    },
    "compileOnSave": true,
    "exclude": [
        "typings/main.d.ts",
        "node_modules/*",
    ],
    "globalDependencies":
    {
        "app": "file:./typings/main.d.ts"
    },
    "files": [
        "typings/main.d.ts",
    ],
    "include": [
        "./src/**/*"
    ]
}